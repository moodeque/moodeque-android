<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="moodtequeView">
	<item name="android:background">@color/light_grey</item>
    <item name="android:textColor">@color/dark_grey</item>
  </style>

  <style name="LoginEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dip</item>
        <item name="android:textSize">@dimen/text_size_large</item>
  </style>
    <style name="LoginButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dip</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/dark_grey</item>

    </style>

    <style name="PlacesElement">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dip</item>
    </style>
    <style name="PlacesName">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    <style name="PlacesDescription">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    <style name="PlacesTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/dark_grey</item>
        <item name="android:textSize">@dimen/text_size_not_so_large</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
    </style>
    <style name="MoodPlaying">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/text_size_not_so_large</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
    </style>
    <style name="MoodPlayingTitle">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:gravity">center_horizontal</item>

        <item name="android:paddingBottom">5dip</item>
    </style>

    <style name="MoodPlayingSong">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:gravity">center_horizontal</item>

    </style>

    <style name="Separator">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">25dip</item>

    </style>




</resources>
